
// No se pone en 'switch( dia )' los tres iguales
// Se pone BREAK para que no ejecute el siguiente
// Default: Si no es ninguna de las condiciones

const dia = '2'; // 0: Domingo

switch( dia ) {
    case 0:
        console.log('Domingo');
        break;
    case 1: 
        console.log('Lunes');
        break;
    case '2':
        console.log('Martes');
        break;
    default:
        console.log('No es lunes, martes o domingo');
}